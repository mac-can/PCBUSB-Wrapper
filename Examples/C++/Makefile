TARGET1 = can_recv
SOURCE1 = $(TARGET1).cpp
DEFINES1 = -DCHANNEL=0x51 -DBAUDRATE=CANBTR_INDEX_250K
LIBRARY1 = PCAN

TARGET2 = can_send
SOURCE2 = $(TARGET2).cpp
DEFINES2 = -DCHANNEL=0x52 -DBAUDRATE=CANBTR_INDEX_250K
LIBRARY2 = UVCANPCB

CXXFLAGS =
LDFLAGS =

CXX = g++
LD = g++
RM = rm -f

all: $(TARGET1) $(TARGET2)

$(TARGET1):	$(SOURCE1)
	$(CXX) $(SOURCE1) $(DEFINES1) $(CXXFLAGS) -l $(LIBRARY1) $(LDFLAGS) -o $(TARGET1)

$(TARGET2):	$(SOURCE2)
	$(CXX) $(SOURCE2) $(DEFINES2) $(CXXFLAGS) -l $(LIBRARY2) $(LDFLAGS) -o $(TARGET2)

clean:
	@-$(RM) *.o *~ $(TARGET1) $(TARGET2)
